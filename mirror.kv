<ScreenManagement>:
	transition: SlideTransition()
	StartupScreen:
	FaceRecognitionScreen:
	RegistrationScreen:
	FaceRegistrationScreen:
	MainScreen:
	NewsScreen:
	NewsSourceScreen:
	NewsArticleScreen:
	WeatherScreen:
	SettingScreen:

<TitleButton>:
    background_color: 0,0,0,1
    font_size: 19

    on_release:
        self.set_article()
        app.root.transition = SlideTransition()
		app.root.transition.direction = "left"
        app.root.current = "article"

<Label>:
    font_name: "fonts/Hattori_Hanzo.otf"

<BackButton>:
    on_release:
        app.root.current = "main"
        app.root.transition.direction = "right"
        app.root.transition = SwapTransition()
    pos: 0,0
    text: "<"
    background_color: 0,0,0,1
    font_size:50

<NewsIcon>:
    on_release:
        self.set_titles()
        app.root.transition = SlideTransition()
        app.root.transition.direction = 'left'
        app.root.current = "source"
    

<StartupScreen>:
    name: "startup"
    id: startup_screen
    GridLayout:
        spacing: 0,0
        size_hint_y: 0.5
        pos: 0, (self.parent.height - self.height) - 100
        rows: 3
        Button:
            text: "Log in"
            font_size: 25
            on_release:
                app.root.transition = SlideTransition()
                app.root.transition.direction = "left"
                app.root.current = "facerec"
            background_color: 0,0,0,1
                
        Button:
            text: "Register"
            font_size: 25
            on_release:
                app.root.transition = SlideTransition()
                app.root.transition.direction = "left"
                #app.root.current = "registration"
            background_color: 0,0,0,1
            
        Button:
            text: "Log in as guest"
            font_size: 25
            on_release:
                app.root.transition = SlideTransition()
                app.root.transition.direction = "left"
                #app.root.current = "main"
            background_color: 0,0,0,1
            
            
<FaceRecognitionScreen>:
    name: "facerec"
    id: facerec
    GridLayout:
        id: facerec_grid
        size_hint_y: 0.3
        pos: 0, (self.parent.height - self.height) - 100 
        rows: 2
        Label:
            id: recognizing_label
            text: "Recognizing face..."
            font_size: 25
        
        


<RegistrationScreen>:
    id: reg
    name: "registration"
    GridLayout:
        size_hint_y: 0.2
        size_hint_x: 0.2
        pos: 0, self.parent.height - self.height
        rows:4
        Label:
            id:step1
            text: "Step 1"
        Label:
            id:step2
            text: "Step 2"
        Label:
            id:step3
            text: "Step 3"
        Label:
            id:step4
            text: "Step 4"
    #Label:
    #    text: "Spell your name one character at a time! \n -'back' to delete last character \n -'done' when finished"
    #    font_size: 25
    #    pos: self.parent.width * .5 - self.width * .5, self.parent.height / 5
    GridLayout:
        id: grid
        rows:3
        size_hint_x: 0.3
        size_hint_y: 0.2
        pos: self.parent.width * .5 - self.width * .5, self.parent.height / 2
        Label:
            id: prompt_label
            text: 'Enter username:'
            size_hint_x: 0.5
        TextInput:
            id: text_input
            size_hint_y: 0.8
            size_hint_x: 0.5
        SaveButton:
            id: save_button
            size_hint_y: 0.5
            size_hint_x: 0.5
            text: "Save"
            on_press:
                self.save_input(text_input.text)
                reg.create_facecapture_button()
        



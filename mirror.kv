		NewModule:
		    size_hint_y: 0.2
		    background_color: 0,0,0,1


		SettingButton:
		    size_hint_y: 0.1
			on_release: 
				app.root.current = "settings"
				app.root.transition = SlideTransition()
			background_color: 0,0,0,1

			font_size: 50
			Image:
			    source: "icons/cogwheel.png"
			    allow_stretch: True
			    size: 30,30
				keep_ratio: False
				pos: self.parent.x + 10, self.parent.y + (self.parent.height / 4)


<WeatherScreen>:
	name: "weather"
    GridLayout:
        rows: 3
        font_name: "fonts/Hattori_Hanzo.otf"
        PresentWeatherLayout:
            padding: 10
            id: present_weather
            cols: 2
            GridLayout:
                cols: 2
                Image:
                    source: present_weather.image_source
                Label:
                    text: root.ids.present_weather.temperature
                    font_size: 50
                    font_name: "fonts/Hattori_Hanzo.otf"
                    id: current_temperature
            GridLayout:
                rows: 3
                Label:
                    text: "Humidity: " + root.ids.present_weather.humidity
                    font_size: 22
                    font_name: "fonts/Hattori_Hanzo.otf"
                Label:
                    text: "Sunrise: " + root.ids.present_weather.sunrise
                    font_size: 22
                    font_name: "fonts/Hattori_Hanzo.otf"
                Label:
                    text: "Sunset: " + root.ids.present_weather.sunset
                    font_size: 22
                    font_name: "fonts/Hattori_Hanzo.otf"

        # The seven columns are made in a loop in python file
        DayWeatherLayout:
            padding: 10,40
            id: day_weather
            cols:7

        # The seven columns are made in a loop in python file
        WeekWeatherLayout:
            padding: 10,40
            id: week_weather
            cols:7


	Button:
		on_release: 
			app.root.current = "main"
			app.root.transition.direction = "right"
			app.root.transition = SwapTransition()
		pos: 0,1
		text: "<"
		background_color: 0,0,0,1
		size_hint: 0.08,0.05
		font_size:50

		
<NewsScreen>:
	name: "news"
	FloatLayout:
		Button:
			on_release: 
				app.root.current = "main"
				app.root.transition.direction = "right"
				app.root.transition = SwapTransition()
			pos: 0,1
			text: "<"
			background_color: 0,0,0,1
			size_hint: 0.08,0.05
			font_size:50


<NewsSourceScreen>:
    name: "source"
    id: source
    GridLayout:
        id: grid
        rows: len(source.titles) + 2 # Titles plus back button and logo
        padding: 10

<NewsArticleScreen>:
    name: "article"
    id: article
    GridLayout:
        rows: 3
        TitleLabel:
            font_size: 27
            id: title
            text_size: self.width, None
            font_name: "fonts/Hattori_Hanzo.otf"
            halign: 'center'
            size_hint_y: 0.4

        PublishedLabel:
            id: published
            text: "Published at: "
            font_name: "fonts/Hattori_Hanzo.otf"
            font_size: 20
            size_hint_y: 0.1

        DescriptionLabel:
            id: description
            text_size: self.width, None
            font_name: "fonts/Hattori_Hanzo.otf"
            halign: 'center'
            valign: 'top'
            padding_y: 10
            font_size: 22

    FloatLayout:
		Button:
			on_release:
			    app.root.transition = SlideTransition()
			    app.root.transition.direction = "right"
				app.root.current = "source"

			pos: 0,1
			text: "<"
			background_color: 0,0,0,1
			size_hint: 0.08,0.05
			font_size:50



<SettingScreen>:
	name: "settings"
	FloatLayout:
		Button:
			on_release:
				app.root.current = "main"
				app.root.transition.direction = "right"
				app.root.transition = SwapTransition()
			pos: 0,1
			text: "<"
			background_color: 0,0,0,1
			size_hint: 0.08,0.05
			font_size:50





	
	
